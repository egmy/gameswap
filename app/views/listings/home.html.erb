<html>

    <div class="text-end">
    <%= link_to "View My Offers", my_offers_path(current_user)%> 
    <br>
    <%= link_to "Edit My profile", edit_user_registration_path%>
    </div>
    <head>
        <title></title>
    </head>
    <body>
        <h3>My Listings</h3>
        <table class="table table-striped">
            <thead class="table table-dark">
                <tr>
                    <th>Game Title</th>
                    <th>Game Condition</th>
                    <th>Description</th>
                    <th><!-- Edit Listing --></th>
                    <th><!-- View My Offers --></th>
                </tr>
            <thead>
            <tbody>
                <% @listings.each do |listing| %>
                    <tr>
                        <td><%= listing.game.title %></td>
                        <td><%= listing.condition %></td>
                        <td><%= listing.description %></td>
                        <td><%= link_to "Edit Listing", edit_listing_path(current_user, listing), class: 'btn btn-outline-secondary'%></td>
                        <td><%= link_to "View Offers"%></td>
                    </tr>

                <% end %>
            </tbody>
        </table>
    </body>
</html>
