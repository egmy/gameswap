<%# this view is a skeleton for new listing with game search, requires routes to be enabled and integration into app w/ links from other pages %>
<%= render "games/search_form" %>

<div class="container text-center mx-auto">
  <h1> New Game Listing</h1>

  <h3><div id="search_results">Game Title</div></h3>



  <%= form_with model: @listing, method: :post, url: listings_path, data: {turbo: false} do |f| %>
      <%= f.select :condition, ["New", "Used-Like New", "Used-Very Good", "Used-Good", "Used-Acceptable"]%>
      <%= f.text_field :description, placeholder: "Describe the condition and what you would like to trade for"%>
      <%= f.submit %>
  <% end %>

  <p class="mt-3">
    <%#= link_to 'Cancel', game_path(@game), class: 'btn btn-outline-secondary' %>
  </p>
</div>
