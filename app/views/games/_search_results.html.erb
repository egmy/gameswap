<p>Viewing <%= @games.count %> results</p>
<ul>
    <% @games.each do |g| %>
        <li>
            <%= link_to highlight(g.title, params[:title_search]), game_path(g) %>
            <%= params %>
            <%= link_to "TRY THIS", new_offer_path(params[:listing_id], :game_id => g.id) %> <!-- listing_id specifically for offers -->

            <!-- passing game_id into current page -->
        </li>
    <% end %>
</ul>
