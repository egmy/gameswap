
<div class="container d-flex justify-content-center align-items-center", style="height: 90vh";>

  <div class= "w-25">

      <h2 class='text-center'>Sign In</h2>
  
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>

        <div class="mb-3">
          <%= f.email_field :email, class: 'form-control', placeholder: 'name@email.com'  %>
        </div>

        <div class="mb-3">
          <%= f.password_field :password, class: 'form-control' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'form-text' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me, class: 'form-control' %>
          </div>
        <% end %>

        <div class="mb-4 text-center">
          <%= f.submit "Sign in", class: 'btn btn-primary w-75' %>
        </div>
      <% end %>

      <p class="text-center mb-0">
        <em>
          Don't have an account yet?
          <%= link_to "Sign up here", new_registration_path(resource_name) %>
        </em>
      </p>

      <!-- <%= render "devise/shared/links" %> -->

  </div>

</div>